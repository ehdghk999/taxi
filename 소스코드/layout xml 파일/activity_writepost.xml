<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/kitcarpool_background_3">
    <TextView
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="글 작성"
        android:textSize="40dp"
        android:textColor="#222A35"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/border_3"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="출발지: "
            android:textSize="25dp"
            android:textColor="#222A35"/>
        <Button
            android:id="@+id/btn_write_post_start_location"
            android:layout_marginLeft="1dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="선택"
            android:textColor="#E7E6E6"
            android:textSize="15dp"
            android:background="@drawable/button_1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="도착지: "
            android:textSize="25dp"
            android:textColor="#222A35"/>
        <Button
            android:id="@+id/btn_write_post_end_location"
            android:layout_marginLeft="1dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="선택"
            android:textColor="#E7E6E6"
            android:textSize="15dp"
            android:background="@drawable/button_1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="출발 시간: "
            android:textSize="25dp"
            android:textColor="#222A35"/>
        <TimePicker
            android:id="@+id/tipic_write_post_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_write_post_do"
            android:layout_marginRight="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="완료"
            android:textSize="30dp"
            android:textColor="#E7E6E6"
            android:textAlignment="center"
            android:background="@drawable/button_1"/>
        <Button
            android:id="@+id/btn_write_post_cancel"
            android:layout_marginLeft="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="취소"
            android:textSize="30dp"
            android:textColor="#E7E6E6"
            android:textAlignment="center"
            android:background="@drawable/button_1"/>
    </LinearLayout>
</LinearLayout>