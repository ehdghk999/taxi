<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/kitcarpool_background_3">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="위치 선택"
        android:textSize="30dp"
        android:textColor="#222A35"
        android:textAlignment="center"
        android:background="@drawable/border_3"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/edt_writepostmap_search"
            android:layout_marginRight="1dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:hint="위치를 입력하세요."
            android:textSize="20dp"
            android:textColor="#222A35"
            android:background="@drawable/border_1"/>
        <Button
            android:id="@+id/btn_writepostmap_search_do"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="검색"
            android:textSize="20dp"
            android:textColor="#E7E6E6"
            android:textAlignment="center"
            android:background="@drawable/button_1"/>
        <ImageButton
            android:id="@+id/btn_writepostmap_myloc"
            android:layout_marginLeft="1dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/location_button"/>
    </LinearLayout>
    <fragment
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/frg_writepost_map"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>
    <TextView
        android:id="@+id/txt_writepost_map_addr"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#222A35"
        android:textAlignment="center"
        android:background="@drawable/border_3"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_writepost_map_addr_do"
            android:layout_marginRight="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="확인"
            android:textSize="30dp"
            android:textColor="#E7E6E6"
            android:textAlignment="center"
            android:background="@drawable/button_1"/>
        <Button
            android:id="@+id/btn_writepost_map_cancel"
            android:layout_marginLeft="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="취소"
            android:textSize="30dp"
            android:textColor="#E7E6E6"
            android:textAlignment="center"
            android:background="@drawable/button_1"/>
    </LinearLayout>
</LinearLayout>