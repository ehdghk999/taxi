<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/kitcarpool_background_2">
    <TextView
        android:id="@+id/txt_pswconfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#E7E6E6"
        android:textAlignment="center"
        android:background="@drawable/border_1"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text|number"
        android:hint="학번"
        android:id="@+id/edt_signup_num"
        android:background="@drawable/border_1"
        android:textSize="25dp"
        android:textColor="#E7E6E6"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="비밀번호"
        android:id="@+id/edt_signup_psw"
        android:background="@drawable/border_1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="25dp"
        android:textColor="#E7E6E6"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="비밀번호 확인"
        android:id="@+id/edt_signup_pswconfirm"
        android:background="@drawable/border_1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="25dp"
        android:textColor="#E7E6E6"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_email_input"
            android:layout_marginRight="1dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:inputType="textVisiblePassword"
            android:hint="이메일 입력"
            android:background="@drawable/border_1"
            android:textSize="25dp"
            android:textColor="#E7E6E6"/>
        <Button
            android:id="@+id/btn_email_cert_do"
            android:layout_marginLeft="1dp"
            android:text="인증"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_1"
            android:textSize="25dp"
            android:textColor="#E7E6E6"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_signup_do"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:text="가입"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_1"
        android:textSize="25dp"
        android:textColor="#E7E6E6"/>

    <Button
        android:id="@+id/btn_signup_cancel"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="취소"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_1"
        android:textSize="25dp"
        android:textColor="#E7E6E6"/>
</LinearLayout>