<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kitcarpool_background_3">
    <TextView
        android:layout_marginTop="3dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="게시판"
        android:textSize="25dp"
        android:textColor="#222A35"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/border_3"/>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <EditText
            android:id="@+id/edt_search_word"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="검색어 입력"
            android:textSize="25dp"
            android:textColor="#222A35"
            android:background="@drawable/border_1"/>
    </LinearLayout>
    <ListView
        android:id="@+id/list_carpool_board_view"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"/>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn_write_post"
            android:layout_marginRight="1dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="글 작성"
            android:textSize="25dp"
            android:textColor="#E7E6E6"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/button_1"/>
        <Button
            android:id="@+id/btn_board_list_logout"
            android:layout_marginLeft="1dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="로그아웃"
            android:textSize="25dp"
            android:textColor="#E7E6E6"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/button_1"/>
    </LinearLayout>
</LinearLayout>