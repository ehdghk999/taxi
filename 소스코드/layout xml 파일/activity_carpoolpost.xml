<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/kitcarpool_background_2">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_carpool_post_user_id"
            android:layout_marginRight="1dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#D1B3F3"
            android:textSize="20dp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/border_1"/>
        <TextView
            android:id="@+id/txt_carpool_post_start_time"
            android:layout_marginLeft="1dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#F8CBAD"
            android:textSize="20dp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/border_1"/>
    </LinearLayout>

    <fragment
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/googlemapfrg"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_carpool_post_start_loc"
            android:layout_marginRight="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#BBEBDB"
            android:background="@drawable/border_1"/>
        <TextView
            android:id="@+id/txt_carpool_post_end_loc"
            android:layout_marginLeft="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#BBEBDB"
            android:background="@drawable/border_1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_carpool_post_load"
            android:layout_marginRight="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="경로 확인"
            android:textAlignment="center"
            android:textColor="#E7E6E6"
            android:textSize="25dp"
            android:background="@drawable/button_1"/>
        <Button
            android:id="@+id/btn_carpool_post_reply"
            android:layout_marginLeft="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="댓글"
            android:textAlignment="center"
            android:textColor="#E7E6E6"
            android:textSize="30dp"
            android:background="@drawable/button_1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_carpool_post_delete"
            android:layout_marginRight="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="삭제"
            android:textAlignment="center"
            android:textColor="#E7E6E6"
            android:textSize="30dp"
            android:background="@drawable/button_1"/>
        <Button
            android:id="@+id/btn_carpool_post_check"
            android:layout_marginLeft="2dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="확인"
            android:textAlignment="center"
            android:textColor="#E7E6E6"
            android:textSize="30dp"
            android:background="@drawable/button_1"/>
    </LinearLayout>

</LinearLayout>