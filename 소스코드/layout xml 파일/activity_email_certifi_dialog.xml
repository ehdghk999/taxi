<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/kitcarpool_background_3">
    <TextView
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이메일 인증하기"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="#222A35"
        android:gravity="center"/>
    <EditText
        android:id="@+id/edt_email_cert_number"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text|number"
        android:hint="인증 번호 입력"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#E7E6E6"
        android:gravity="center"
        android:background="@drawable/border_1"/>
    <TextView
        android:id="@+id/txt_email_cert_timelimit"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="03 : 00"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="#222A35"/>
    <Button
        android:id="@+id/btn_email_cert_check"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textSize="30dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#E7E6E6"
        android:background="@drawable/button_1"/>

</LinearLayout>